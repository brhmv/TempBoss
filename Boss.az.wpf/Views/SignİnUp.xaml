<UserControl x:Class="Boss.az.wpf.Views.SignİnUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Boss.az.wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Blue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0">
            <Button Content="Sign In" Background="White" Foreground="DeepSkyBlue" Command="{Binding SignInButton}"  />
            <Button Content="Sign Up" Background="White" Foreground="DeepSkyBlue" Command="{Binding SignUpButton}"/>
        </StackPanel>

        <local:WorkerSignIn></local:WorkerSignIn>
    </Grid>
</UserControl>
